SPIEL "Test gedrueckte Taste"

VAR buchstabe = ""

WENN_START {
    SCHREIBE("Druecke eine Taste!")
}

WENN_IMMER {
    ZEICHNE_RECHTECK(0, 0, 800, 600, "#1a1a2e")
    
    buchstabe = GEDRUECKTE_TASTE
    
    WENN buchstabe != "" {
        ZEIGE_TEXT("Gedrueckt: " + buchstabe, 300, 300, "#ffffff", 30)
    }
}
